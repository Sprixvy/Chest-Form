{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2020",
        "moduleResolution": "node",
        "strict": false,
        "noEmitOnError": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "rootDir": "src",
        "outDir": "scripts",
        "allowJs": false,
        "resolveJsonModule": false,
        "paths": {
            "@minecraft/server": ["./node_modules/@minecraft/server"],
            "@minecraft/server-ui": ["./node_modules/@minecraft/server-ui"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["scripts"]
}
