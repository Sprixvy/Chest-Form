                    "collection_name": "form_buttons",
                    "layer": 1,
                    "orientation": "horizontal",
                    "size": ["default", 18],
                    "controls": [
                        {
                            "0@inventory.item_panel": {
                                "collection_index": "($start_index + 18)"
                            }
