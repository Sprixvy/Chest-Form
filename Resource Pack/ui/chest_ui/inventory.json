{
    "namespace": "inventory",

    "title": {
        "type": "label",
        "anchor_from": "bottom_left",
        "anchor_to": "bottom_left",
        "color": "$title_text_color",
        "ignored": "(not $inventory_enabled)",
        "layer": 2,
        "text": "container.inventory"
    },

    "items": {
