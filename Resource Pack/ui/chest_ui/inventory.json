    "item_panel": {
        "type": "panel",
        "layer": 1,
        "size": [18, 18],
        "controls": [
            {
                "background@container.slot": {}
            },
            {
                "amount@container.item_amount": {}
            },
            {
                "item@inventory.item": {}
            }
        ]
    },

    "item@common.button": {
        "$aux_id": [
            {
                "binding_name": "#form_button_texture",
                "binding_type": "collection",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not (('%.8s' * #form_button_texture) = 'textures'))",
                "target_property_name": "#visible"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",
                "target_property_name": "#visible"
            },
            {
                "binding_type": "view",
                "source_property_name": "(1 * (#form_button_texture - ']'))",
                "target_property_name": "#item_id_aux"
            }
        ],
        "$pressed_button_name": "button.form_button_click",
        "bindings": [
            {
                "binding_name": "#form_button_text",
                "binding_type": "collection",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_type": "collection_details",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_type": "view",
                "source_property_name": "(not (#form_button_text = ''))",
                "target_property_name": "#visible"
            }
        ],
        "button_mappings": [
            {
                "from_button_id": "$pressed_button_name",
                "to_button_id": "any",
                "mapping_type": "pressed"
            },
            {
                "from_button_id": "$pressed_button_name",
                "to_button_id": "any",
                "mapping_type": "focused"
            }
        ],
        "default_control": "default",
        "hover_control": "hover",
        "pressed_control": "pressed",
        "controls": [
            {
                "default@container.default_control": {}
            },
            {
                "hover@container.hover_control": {}
            },
            {
                "pressed@container.pressed_control": {}
            }
        ]
    },

    "hotbar": {
        "$size": "$condition",
        "$start_index": "(($size - '§c§h§e§s§t' - '§') * 1)",
        "type": "stack_panel",
        "collection_name": "form_buttons",
        "ignored": "(not $inventory_enabled)",
        "layer": 1,
        "orientation": "horizontal",
        "size": ["default", 18],
        "controls": [
            {
                "0@inventory.item_panel": {
                    "collection_index": "$start_index"
                }
            },
            {
                "1@inventory.item_panel": {
                    "collection_index": "($start_index + 1)"
                }
            },
            {
                "2@inventory.item_panel": {
                    "collection_index": "($start_index + 2)"
                }
            },
            {
                "3@inventory.item_panel": {
                    "collection_index": "($start_index + 3)"
                }
            },
            {
                "4@inventory.item_panel": {
                    "collection_index": "($start_index + 4)"
                }
            },
            {
                "5@inventory.item_panel": {
